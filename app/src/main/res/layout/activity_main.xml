<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Burn Ratre : "
        android:textSize="15dp"
        android:layout_marginStart="49dp"
        android:layout_marginEnd="50dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/textView10"
        app:layout_constraintBaseline_toBaselineOf="@+id/burnRate"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/burnRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 MB/hour"
        android:textSize="17dp"
        android:layout_marginStart="14dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="44dp"
        app:layout_constraintTop_toBottomOf="@+id/eta"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/textView3" />

    <TextView
        android:id="@+id/DataPack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 MB"
        android:textSize="20dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/Dataused"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/Dataused" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Pack size : "
        android:textSize="19dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintRight_toLeftOf="@+id/DataPack"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintBaseline_toBaselineOf="@+id/DataPack"
        tools:layout_constraintBaseline_creator="1" />

    <TextView
        android:id="@+id/Dataused"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 MB"
        android:textSize="24dp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginStart="10dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/Datausedlabel"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/Datausedlabel" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Remaining"
        android:textSize="19dp"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginEnd="22dp"
        app:layout_constraintRight_toLeftOf="@+id/Datausedlabel"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="191dp" />

    <TextView
        android:id="@+id/eta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 hours"
        android:textSize="19dp"
        android:layout_marginStart="3dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/textView10"
        app:layout_constraintLeft_toRightOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estimated Usage at this burn rate : "
        android:layout_marginStart="16dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="178dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Datausedlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Used"
        android:textSize="19dp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginEnd="56dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView8"
        tools:layout_constraintBaseline_creator="1" />

    <TextView
        android:id="@+id/dataRemaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 MB"
        android:textSize="24dp"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginEnd="25dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintRight_toRightOf="@+id/textView6"
        android:layout_marginBottom="29dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Days Remaining : "
        android:textSize="17dp"
        app:layout_constraintRight_toLeftOf="@+id/dateRemaining"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="@+id/dateRemaining" />

    <TextView
        android:id="@+id/dateRemaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exhausted"
        android:textSize="22dp"
        android:textColor="@android:color/holo_red_dark"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="56dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="94dp"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>